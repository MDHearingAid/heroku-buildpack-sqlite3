#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output
set -x          # enable debugging

build_dir=$1
cache_dir=$2
env_dir=$3

bp_dir=$(cd $(dirname $0); cd ..; pwd)

# Load some convenience functions like status(), echo(), and indent()
source $bp_dir/bin/common.sh

mkdir -p $build_dir/vendor/sqlite3/bin

# Download sqlite3
status "Downloading and sqlite3"
sqlite3_url="http://www.sqlite.org/2014/sqlite-autoconf-3080600.tar.gz"
curl $sqlite3_url -s -o - | tar xzf - -C $build_dir
source_dir=$build_dir/sqlite-autoconf-3080600
cd $source_dir
./configure
make
#gcc $source_dir/shell.c $source_dir/sqlite3.c -lpthread -ldl
ls $source_dir/
mv $source_dir/sqlite3 $build_dir/vendor/sqlite3/bin/sqlite3

mkdir -p $build_dir/.profile.d
echo 'PATH=$PATH:$HOME/vendor/sqlite3/bin' > $build_dir/.profile.d/sqlite3.sh
